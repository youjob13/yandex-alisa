{
    "name": "yandex-alisa",
    "version": "1.0.0",
    "description": "Custom scripts for Yandex Alisa",
    "main": "index.js",
    "keywords": [
        "alisa",
        "yandex",
        "yandex alisa",
        "алиса",
        "яндекс",
        "яндекс алиса",
        "умный дом",
        "голосовой помощник",
        "voice assistant"
    ],
    "type": "module",
    "scripts": {
        "dev": "nodemon --experimental-specifier-resolution=node ./src/index.ts",
        "start": "node dist/index.js",
        "start:prod": "node --env-file=.env dist/index.js",
        "build": "tsc -b tsconfig.json",
        "lint": "eslint src/**/*.ts packages/**/*.ts",
        "lint:fix": "eslint src/**/*.ts packages/**/*.ts --fix",
        "format": "prettier . --write",
        "test": "npm run test --workspaces --if-present"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/youjob13/yandex-alisa.git"
    },
    "author": "Danil Rodionow",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/youjob13/yandex-alisa/issues"
    },
    "engines": {
        "node": ">=20.9.0",
        "npm": ">=10.1.0"
    },
    "pre-commit": [
        "format",
        "lint:fix",
        "build",
        "test"
    ],
    "homepage": "https://github.com/youjob13/yandex-alisa#readme",
    "devDependencies": {
        "@eslint/js": "9.10.0",
        "@types/eslint__js": "8.42.3",
        "@types/node": "22.5.5",
        "eslint": "9.10.0",
        "nodemon": "3.1.5",
        "pre-commit": "1.2.2",
        "prettier": "3.3.3",
        "ts-node": "10.9.2",
        "typescript": "5.6.2",
        "typescript-eslint": "8.6.0"
    },
    "dependencies": {
        "@myalisa/audio-reply": "^1.0.0",
        "@myalisa/config": "^1.0.0",
        "@myalisa/ya-dialogs": "^1.0.0",
        "fastify": "5.0.0"
    },
    "workspaces": [
        "packages/config",
        "packages/audioReply",
        "packages/ya-dialogs",
        "packages/shared"
    ]
}
